<%- include("includes/_header") %>

<% if (error) { %>
  <div class="alert"><strong>Error:</strong> <%= error %></div>
<% } %>

<h2>Add a product</h2>

<form action="/products" method="POST">
  <label>Name</label>
  <input name="name" type="text" value="<%= form.name %>" required />

  <label>Price</label>
  <input name="price" type="number" min="0" step="0.01" value="<%= form.price %>" required />

  <label>Quantity</label>
  <input name="quantity" type="number" min="0" value="<%= form.quantity %>" required />

  <button type="submit">Add product</button>
</form>

<hr />

<h2>All products</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% if (products && products.length) { %>
      <% products.forEach(function(p) { %>
        <tr>
          <td><%= p.name %></td>
          <td>$<%= p.price %></td>
          <td><%= p.quantity %></td>
          <td><%= new Date(p.createdAt).toLocaleString() %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr><td colspan="4">No products yet.</td></tr>
    <% } %>
  </tbody>
</table>

<%- include("includes/_footer") %>